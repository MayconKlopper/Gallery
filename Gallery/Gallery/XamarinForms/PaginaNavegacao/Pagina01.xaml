<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.XamarinForms.PaginaNavegacao.Pagina01"
             Title="Página 01">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#1a1919">
            <Label Text="Essa é a Página 01 de Navegação"
                TextColor="White"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Próxima Página"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    VerticalOptions="EndAndExpand"
                    Clicked="ProximaPagina"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>